# ERROR DOCUMENTS

ErrorDocument 404 /404.html
ErrorDocument 403 /403.html
ErrorDocument 500 /500.html
ErrorDocument 503 /503.html
Options -Indexes
RewriteEngine on

# REMOVE WWW
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ http://%1/$1 [R=301,L]

# HTTPS ONLY
RewriteCond %{HTTPS} !on
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# BEGIN BROWSER CACHE
<FilesMatch "\.(jpg|png|gif|mp4|svg)$">
	Header set Cache-Control "public, max-age=72576000"
</FilesMatch>

<FilesMatch "\.(json|woff|js|css)$">
Header set Cache-Control "max-age=86400"
</FilesMatch>
 

# BEGIN GZIP
<ifmodule mod_deflate.c>
AddOutputFilterByType DEFLATE text/text text/html text/plain text/xml text/css application/x-javascript application/json application/javascript
</ifmodule>
# END GZIP
