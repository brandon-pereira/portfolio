---
import Logo from '@components/Logo.astro';
import Typewriter from '@components/Typewriter.astro';
---

<footer>
  <div class="content">
    <div>
      Website designed, built, and maintained by Brandon Pereira<Typewriter />
    </div>
    <a
      href="https://github.com/brandon-pereira"
      target="_blank"
      aria-label="GitHub"
    >
      <Logo
        class="footerLogo"
        size={50}
        colors={{
          outerFront: '#0f0',
          outerRight: '#000',
          innerBack: '#0f0',
          innerLeft: '#000',
          innerBottom: '#000'
        }}
      />
    </a>
  </div>
</footer>

<style>
  footer {
    background: #000;
  }
  .content {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 1rem;
    font-family: var(--font-monospace);
    color: #0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 2rem;
    text-align: center;
  }

  .footerLogo {
    margin: 0 auto;
    background: red;
  }
</style>
