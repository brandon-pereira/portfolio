---
import Logo from '@components/Logo.astro';
import Typewriter from '@components/Typewriter.astro';
import AstroImage from 'src/assets/astro.png';
import { Image } from 'astro:assets';
---

<footer>
  <div class="content">
    <div>
      Website designed, built, and maintained by Brandon Pereira<Typewriter />
    </div>
    <div class="logos">
      <a
        href="https://github.com/brandon-pereira"
        target="_blank"
        aria-label="GitHub"
      >
        <Logo
          class="footerLogo"
          size={75}
          styles={{
            outerFront: '#0f0',
            outerRight: '#000',
            innerBack: '#0f0',
            innerLeft: '#000',
            innerBottom: '#000'
          }}
        />
      </a>
      <div class="plus">+</div>
      <a href="https://astro.build/" target="_">
        <Image
          src={AstroImage}
          quality="max"
          height={75}
          alt="Astro Logo"
          class="astro"
        />
      </a>
    </div>
  </div>
</footer>

<style>
  footer {
    background: #000;
  }
  .content {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 1rem;
    font-family: var(--font-monospace);
    color: #0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 2rem;
    text-align: center;
  }

  .logos {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .plus {
    font-size: 2rem;
    margin: 0 1rem;
  }

  .astro {
    animation: 1s shake infinite alternate;
  }
  @keyframes shake {
    from {
      transform: rotate(13deg);
    }
    to {
      transform: rotate(-13deg);
    }
  }
</style>
