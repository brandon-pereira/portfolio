<style>
  .buttons {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
  .buttons .button {
    width: 100%;
    padding: 1rem 0;
    font-family: var(--font-monospace);
    text-decoration: none;
  }
  .container {
    overflow: hidden;
    background: #00f;
    box-shadow:
      inset 0 1px #000,
      inset 0 4px #fff;
  }

  .content {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 1rem;
  }

  pre {
    width: fit-content;
    margin: 0 auto;
    font-family: var(--font-monospace);
    color: #fff;
    text-overflow: clip;
    overflow-y: scroll;
    font-size: min(1.7vw, 1.3rem);
    outline: none;
  }
</style>
