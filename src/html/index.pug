doctype html
html(lang='en')
  head
    // Application Attributes
    link(rel='stylesheet', type='text/css', href='../styles/style.scss')
    meta(charset='UTF-8')
    meta(
      name='viewport',
      content='width=device-width, initial-scale=1.0, user-scalable=0'
    )

    // SEO Attributes
    meta(name='description', content=seo.description)
    title #{ seo.title }
    link(rel='canonical', href='https://branclon.com/')

    // Share Attributes
    link(
      rel='apple-touch-icon',
      sizes='180x180',
      href='../static/apple-touch-icon.png'
    )
    link(
      rel='icon',
      type='image/png',
      sizes='32x32',
      href='../static/favicon-32x32.png'
    )
    link(
      rel='icon',
      type='image/png',
      sizes='16x16',
      href='../static/favicon-16x16.png'
    )
    link(rel='manifest', href='../static/site.webmanifest')
  body
    header#header.header
      .logo 
        svg 
          use(xlink:href='#clon')
      .copy 
        span.story-copy Hi, I'm
        h1.name #{ about.firstName }
        span.story-copy and I build&nbsp;
          span(data-scroll-text=about.scrollText)

    #about.container.about(data-track-button='true')
      .content !{ about.description }

    section#projects.container.projects(data-track-section)
      header.main
        h2.maintext(data-text='Projects') Projects
        span.subtext
          | A showcase of my
          span
          | past, present, and future.
      .plus-loader
      .content 
        .filters(data-filters='')
          div
            | You&apos;re viewing projects built using &quot;
            span
            | &quot;.
          button RESET

        .projects.hidden
        .project.snippet.hidden.skeleton(data-project-learn-more)
          .image-container
            img(loading='lazy')
          h3
            span(data-project-title)
          p(data-project-description)
          button.button Learn More
        .project.detailed-view.hidden
          header
            button.button(data-back-button)
              svg
                use(xlink:href='#caret')
              span BACK
            span(data-project-date) Loading...
            span(data-project-status)
          h3
            a(data-project-link='', data-project-title='', target='_')
          div(data-project-description='')
          div(data-project-images='')
          div(data-project-languages='')

        button.project.loadMore Load More

    section#apps.container.apps(
      class=apps[0].theme,
      data-current-slide='0',
      data-track-section
    ) 
      .stripes
        div
        div 
        div
      header.main 
        span.maintext Apps
        span.subtext
          | I've got
          span &nbsp;
          | for that
      .content
        .carousel-slides
          each app, index in apps
            .carousel-slide(
              class=index == 0 ? "currentSlide" : "",
              data-styling=app.theme
            )
              .row
                .column-icon
                  a(aria-label=app.appName, target='_', href=app.link)
                    img.app-icon(
                      alt=app.appName,
                      loading='lazy',
                      src="../../content" + app.icon.url
                    )
                  a.cta(href=app.link, target='_', aria-label=app.appName)
                .column-info
                  a(href=app.link)
                    h2 !{ app.appName }
                  p !{ app.description }
              .row.photos
                each img in app.images
                  img(
                    src="../../content" + img.url,
                    loading='lazy',
                    title=app.appName,
                    data-lightbox=img
                  )
        .carousel-dots
          each app, index in apps
            button.dot(
              class=index === 0 ? "active" : "",
              data-goto=index,
              aria-label='Go to slide #{loop.index}'
            )
        button.next.carousel-arrow(
          data-goto='next',
          aria-label='Go to next slide'
        )
          svg
            use(xlink:href='#caret')
        button.prev.carousel-arrow(
          data-goto='prev',
          aria-label='Go to previous slide'
        )
          svg
            use(xlink:href='#caret')

    section#skills.container.skills(data-track-section)
      header.main
        h2.uglyText Personal
          span
          | Skills
        p A list of skills I've accumulated over the years, click a category to see skills and click a skill to see a little description about my experience.
      .content
        each category in skills
          section.accordion.category(class=category.isOpen ? "open" : "")
            button(data-accordion-handler)
              .title #{ category.name }
              .caret
                svg
                  use(xlink:href='#caret')
            article
              each skill in category.skills
                section.accordion.skill(data-id=skill._id)
                  button(
                    tabindex=category.isOpen ? "0" : "1",
                    data-closable,
                    data-accordion-handler
                  )
                    .title #{ skill.name }
                    .caret
                      svg
                        use(xlink:href='#caret')
                  article
                    span.description #{ skill.description }
                    br
                    button.button(
                      data-closable,
                      tabindex='-1',
                      data-go-to-project=skill._id
                    ) Projects
                    a.button(href='#contact', data-closable, tabindex='-1') Contact Me

    section#contact.container.contact(data-track-section)
      .content
        h2 Contact
        h3 Let&apos;s Talk
        .grid
          each item in contact.contactLinks
            a.item(
              class=item.class,
              href=item.link,
              aria-label=item.text,
              rel='noopener',
              target='_blank'
            )
        h3 Social
        .grid
          each item in contact.socialLinks
            a.item(
              class=item.class,
              href=item.link,
              aria-label=item.text,
              rel='noopener',
              target='_blank'
            )

    footer#footer.container
      .content.uglyText
        | Website designed, built, and maintained by Brandon Pereira
        span
      .logo 
        a(href='https://github.com/brandon-pereira', aria-label='GitHub')
          svg
            use(xlink:href='#clon')

    svg.spritemap(xmlns='http://www.w3.org/2000/svg')
      include ../static/icons/caret.svg
      include ../static/icons/clon.svg

    //- <!-- TODO:Google Analytics -->

    script(type='module', src='../scripts/index.ts', async, defer)
