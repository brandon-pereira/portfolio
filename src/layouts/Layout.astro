---
import GoogleAnalytics from '@components/Analytics/GoogleAnalytics.astro';
import BootstrapLightbox from '@components/Lightbox/BootstrapLightbox.astro';
import { ViewTransitions } from 'astro:transitions';
import clon from '../../public/icons/clon.svg';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href={clon.src} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <meta name="theme-color" content="#288FD9" />
    {/* https://stackoverflow.com/a/60477207/7033335 */}
    <link
      href="https://fonts.googleapis.com/css2?family=Lily+Script+One&Merriweather&family=Poppins&family=Press+Start+2P&family=Bungee Shade&family=Nabla&display=swap"
      rel="preload"
      as="style"
      onload="
      this.onload = null; this.rel = 'stylesheet'
      "
    />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>Brandon Pereira's Portfolio - {title}</title>
    <meta
      name="description"
      content="Portfolio for Brandon Pereira, a front-end web developer from Calgary, AB."
    />
    <ViewTransitions />
  </head>
  <body>
    <slot />
    <style is:global>
      :root {
        --font-sansserif: 'Poppins', 'Verdana', sans-serif;
        --font-serif: 'Merriweather', serif;
        --font-monospace: 'Press Start 2P', monospace;
        --max-width: min(100vw - 36px, 1200px);
        --background-color: #151515;
        --color: #fff;
        --color-primary-800: #041724;
        --color-primary-700: #0a2e4a;
        --color-primary-600: #0b466e;
        --color-primary-500: #1c5378;
        --color-primary-400: #1e7abc;
        --color-primary-300: #2ea3ff;
        --color-primary-200: #5ecbff;
        --color-primary-100: #a5e0ff;
        --color-primary-50: #e6f5ff;
      }
      /* @media (prefers-color-scheme: light) {
        :root {
          --background-color: #e6f5ff;
          --color: #000;
          --color-primary-400: #085188;
        }
      } */
      html {
        font-family: var(--font-sansserif);
        background-color: var(--background-color);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      body {
        margin: 0;
        color: var(--color);
      }

      a {
        color: var(--color-primary-400);
      }
    </style>
    <BootstrapLightbox />
    <GoogleAnalytics />
    <script>
      import { injectBackButtonListener } from '../utils/backButtonLogic';
      injectBackButtonListener();
    </script>
  </body>
</html>
