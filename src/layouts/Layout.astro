---
import { ViewTransitions } from "astro:transitions";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lily+Script+One&Merriweather&family=Poppins&family=Press+Start+2P&family=Bungee Shade&display=swap"
      rel="stylesheet"
    />

    <meta name="generator" content={Astro.generator} />
    <title>Brandon Pereira's Portfolio - {title}</title>
    <ViewTransitions />
  </head>
  <body>
    <slot />
    <style is:global>
      :root {
        --font-sansserif: "Poppins", sans-serif;
        --font-serif: "Merriweather", serif;
        --font-monospace: "Press Start 2P", monospace;
        --max-width: min(100vw - 36px, 1200px);
        --background-color: #151515;
      }
      html {
        font-family: var(--font-sansserif);
        background-color: var(--background-color);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      body {
        margin: 0;
      }

      a {
        background: #d7e7e9;
        color: var(--background-color);
        box-sizing: border-box;
        padding: 1px 4px;
      }
    </style>
  </body>
</html>
