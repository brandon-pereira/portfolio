---
import NavBar from '@components/NavBar.astro';
import ProjectsList from '@components/projects/ProjectsList.astro';
import Layout from '@layouts/Layout.astro';
import { byCreationDate, getProjects } from 'src/utils/projects';

const projects = (await getProjects()).sort(byCreationDate);
---

<Layout title="Projects">
  <NavBar />
  <ProjectsList projects={projects} isAllProjects={true} />
</Layout>
