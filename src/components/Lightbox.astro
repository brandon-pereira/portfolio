---
import type { ImageMetadata, ImageTransform } from 'astro';
import { getImage } from 'astro:assets';

interface Props {
  src: ImageMetadata;
  alt: string;
  description?: string;
  thumbProps?: Omit<ImageTransform, 'src'>;
  fullProps?: Omit<ImageTransform, 'src'>;
}

const { src, alt, thumbProps, fullProps } = Astro.props;

const full = await getImage({
  src,
  ...fullProps
});
const thumb = await getImage({
  src,
  ...thumbProps
});
---

<img
  src={thumb.src}
  {...thumb.attributes}
  alt={alt}
  data-lightbox={JSON.stringify({
    ...full.attributes,
    url: full.src,
    description: alt
  })}
/>

<script>
  import Lightbox from '../utils/lightbox';
  document.addEventListener('astro:page-load', () => {
    // TODO: only run on current
    new Lightbox();
  });
</script>

<style is:global>
  .lightbox {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    z-index: 10;
    padding-top: 3rem;
    visibility: hidden;
    pointer-events: none;
    [data-asset] {
      visibility: hidden;
    }
    &.opening {
      background: rgba(0, 0, 0, 0.8);
      opacity: 1;
      visibility: visible;
      pointer-events: all;
      transition: background 0.3s;
    }
    &.open {
      [data-asset] {
        visibility: visible;
      }
      [data-description] {
        opacity: 1;
      }
    }

    & .close-button {
      position: absolute;
      top: 1rem;
      right: 1rem;
      cursor: pointer;
      color: #fff;
      font-size: 3rem;
      line-height: 2rem;
      background: none;
      border: none;
    }
    & .modal-content {
      height: 100%;
      width: 80%;
      max-width: 800px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }
    & img,
    video {
      display: block;
      max-height: 80vh;
      max-width: 100vw;
      margin: 0 auto;
      box-shadow: 0 5px 10px #000;
    }

    & [data-description] {
      color: #fff;
      text-align: center;
      text-shadow: 0 1px 2px #000;
      font-size: 1rem;
      margin: 1rem 0 0 0;
      opacity: 0;
      transition: 0.5s all;
    }
  }

  .ghost--img {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 25;
    transition: all 0.3s cubic-bezier(1, 0, 0, 1);
    object-fit: contain;
    box-shadow: 0 5px 10px #000;
  }
</style>
