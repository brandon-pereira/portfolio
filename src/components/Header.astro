---
import Logo from './Logo.astro';
---

<header>
  <a class="back" href="/"><span>&lt;</span>Back</a>

  <a href="/" class="logo">
    <Logo
      aria-label="GitHub"
      size={50}
      styles={{
        strokeColor: '#fff',
        strokeWidth: '10px',
        outerFront: 'transparent',
        outerRight: 'transparent',
        innerBack: 'transparent',
        innerLeft: 'transparent',
        innerBottom: 'transparent'
      }}
    />
  </a>
  <div></div>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
    color: #fff;
    padding: 0 1rem;
    position: sticky;
    top: 0;
  }

  .logo {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }

  .back {
    color: inherit;
    text-decoration: none;
    display: flex;
    gap: 0.3rem;
    font-size: 1.2rem;
  }
</style>
