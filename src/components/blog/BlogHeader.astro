---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<h2 class="title">
  {
    title
      .split('')
      .map((letter, i) => <span style={{ '--i': i }}>{letter}</span>)
  }
</h2>

<style>
  .title {
    font-size: min(20vw, 4rem);
    text-align: center;
    margin: 3rem auto;
    font-family: 'Honk';
    line-height: 1.1;
    font-variation-settings: 'SHLN' 50 'MORF' 15;
    & span {
      animation: depth 4s linear alternate infinite;
    }
  }

  @keyframes depth {
    0% {
      font-variation-settings:
        'SHLN' 40,
        'MORF' 0;
    }
    100% {
      font-variation-settings:
        'SHLN' 60,
        'MORF' 15;
    }
  }

  @media (--tablet) {
    .title {
      font-size: min(10vw, 8rem);
    }
  }
</style>
