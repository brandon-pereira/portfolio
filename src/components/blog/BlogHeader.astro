---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<h2 class="title">
  {
    title
      .split('')
      .map((letter, i) => <span style={{ '--i': i }}>{letter}</span>)
  }
</h2>

<style>
  @font-palette-values --color {
    font-family: 'Honk';
    base-palette: 3;
    override-colors:
      0 #a5e0ff,
      1 #a5e0ff,
      2 #1c5378,
      3 #1e7abc,
      4 #1c5378,
      5 #1e7abc,
      6 #1c5378,
      7 #1e7abc;
  }

  .title {
    font-size: min(20vw, 4rem);
    text-align: center;
    margin: 3rem auto;
    font-family: 'Honk';
    line-height: 1.1;
    font-palette: --color;
    font-variation-settings:
      'MORF' 39,
      'SHLN' 39;
    & span {
      animation: depth 4s linear alternate infinite;
    }
  }

  @keyframes depth {
    0% {
      font-variation-settings:
        'SHLN' 40,
        'MORF' 0;
    }
    100% {
      font-variation-settings:
        'SHLN' 60,
        'MORF' 15;
    }
  }

  @media (--tablet) {
    .title {
      font-size: min(10vw, 8rem);
    }
  }
</style>
