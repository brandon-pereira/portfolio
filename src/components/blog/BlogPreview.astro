---
import type { CollectionEntry } from 'astro:content';
import Typewriter from '@components/Typewriter.astro';
interface Props {
  blogArticle: CollectionEntry<'blog'>;
}

const { blogArticle } = Astro.props;
const { data, slug } = blogArticle;
const { title, datePosted } = data;
const url = '/blog/' + slug;

const dateFormatter = new Intl.DateTimeFormat('en-CA', {
  dateStyle: 'long'
});
// const thumbnail = media?.[0];
---

<div class="container" transition:name={`blog-title-${slug}`}>
  <time datetime={datePosted.toISOString()}
    >{dateFormatter.format(datePosted)}</time
  >
  <h3 class="title">{title}<Typewriter /></h3>
  <a href={url}>Learn more</a>
</div>

<style>
  .container {
    display: flex;
    position: relative;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    border-radius: 1rem;
    box-shadow: 0 5px 5px 5px rgba(0, 0, 0, 0.5);
    background: rgba(0, 0, 0, 0.2);
    overflow: hidden;

    &:before {
      transition: width 0.5s ease-in-out;
      content: '';
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      width: 16px;
      background: linear-gradient(#de5959, #6f0808);
    }
    &:hover {
      &:before {
        width: 100%;
      }
    }
    & * {
      z-index: 9;
    }
  }

  .title {
    margin: 0;
    font-size: 1.6rem;
    text-align: center;
    line-height: 1.2;
    font-family: var(--font-monospace);
  }
</style>
