---
// Inspired by https://uiverse.io/namecho/slippery-moth-23
interface Props {
  color: string | undefined;
  href: string;
  target?: HTMLAnchorElement["target"];
  isDarkColor?: boolean;
  class?: string;
}
const { color, isDarkColor, href, target, class: className } = Astro.props;
---

<a class:list={["button--container", className]} target={target} href={href}
  ><slot /></a
>

<style
  define:vars={{
    color: color || "#0f0",
    secondaryColor: isDarkColor ? "#eee" : "#111",
  }}
>
  .button--container {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    border: 3px solid var(--color);
    position: relative;
    overflow: hidden;
    background-color: transparent;
    text-align: center;
    cursor: pointer;
    font-size: 16px;
    font-weight: 600;
    transition: 0.3s;
    z-index: 1;
    font-family: inherit;
    color: var(--color);
  }

  .button--container:focus {
    outline: none;
  }

  .button--container::before {
    content: "";
    width: 0;
    height: 1000%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) rotate(45deg);
    background: var(--color);
    transition: 0.5s ease;
    display: block;
    z-index: -1;
  }

  .button--container:focus-visible::before,
  .button--container:hover::before {
    width: 105%;
  }

  .button--container:focus-visible,
  .button--container:hover {
    color: var(--secondaryColor);
  }
</style>
