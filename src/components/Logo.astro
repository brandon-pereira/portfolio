---
import logo from '../../public/icons/clon.svg?raw';

interface Props {
  size?: number;
  styles?: {
    outerFront?: string;
    outerRight?: string;
    innerBack?: string;
    innerLeft?: string;
    innerBottom?: string;
    strokeColor?: string;
    strokeWidth?: string;
  };
  class?: string;
}

const { size, styles, class: className }: Props = Astro.props;
---

<div
  class={className}
  style={{
    aspectRatio: '448.9 / 451.1',
    width: size ? (typeof size === 'number' ? `${size}px` : size) : '100%',
    '--outer-front': styles?.outerFront ?? 'unset',
    '--outer-right': styles?.outerRight ?? 'unset',
    '--inner-back': styles?.innerBack ?? 'unset',
    '--inner-left': styles?.innerLeft ?? 'unset',
    '--inner-bottom': styles?.innerBottom ?? 'unset',
    '--stroke-color': styles?.strokeColor ?? 'unset',
    '--stroke-width': styles?.strokeWidth ?? 'unset'
  }}
>
  <Fragment set:html={logo} />
</div>
