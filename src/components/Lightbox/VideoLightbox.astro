---
interface Props {
  src: string;
  description?: string;
}

const { src, description } = Astro.props;
---

<video
  src={src}
  aria-describedby={description}
  data-lightbox={JSON.stringify({
    src,
    description
  })}
  autoplay
  muted></video>

<script>
  import Lightbox from '../../utils/lightbox';
  document.addEventListener('astro:page-load', () => {
    // TODO: only run on current
    new Lightbox();
  });
</script>
