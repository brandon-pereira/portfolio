{
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {},
    "typeRoots": ["node_modules/@types", "./types"],
    "module": "esnext",
    "noImplicitAny": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es2021"
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", ".vscode"]
}
